#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
   setlocale(LC_ALL, "Portuguese");
   int cod;
   float sal, aum, novoSalario;

   
 
        printf("[1] - Servente\n");
	printf("[2] - Pedreiro\n");
	printf("[3] - Mestre de obras\n");
	printf("[4] - Técnico de segurança\n");
	printf("Digite seu cargo: ");
	scanf("%d", &cod);

   
    printf("Digite seu salário atual: ");
    scanf("%f", &sal);

    switch (cod) {
        
        case 1:
            aum = sal * 0.4;
        break;
        
        case 2:
            aum = sal * 0.35;
        break;
            
        case 3:
            aum = sal * 0.2;
        break;
        
       
        case 4:
            aum = sal * 0.1;
        break;
    
        default:
        
          printf("Código de cargo inválido.\n");
        
        return 1; 

    }

    novoSalario = sal + aum;

   

    printf("Valor do aumento: R$ %.2f\n", aum);
    
    printf("Novo salário: R$ %.2f\n", novoSalario);


    system("pause");
    return 0;
}
