#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
   setlocale(LC_ALL, "Portuguese");
    int num1, num2, num3, maior, menor;

    printf("Vamos ver qual dos números que irá dar será o maior!\n\n");
   
    printf("Digite o primeiro número inteiro: ");
    scanf("%d", &num1);

    printf("Digite o segundo número inteiro: ");
    scanf("%d", &num2);

    printf("Digite o terceiro número inteiro: ");
    scanf("%d", &num3);

  
    maior = menor = num1;


    if (num2 > maior) {
        maior = num2;
    }
    if (num2 < menor) {
        menor = num2;
    }


    if (num3 > maior) {
        maior = num3;
    }
    if (num3 < menor) {
        menor = num3;
    }


    printf("O maior número é: %d\n", maior);
    printf("O menor número é: %d\n", menor);

    system("pause");
    return 0;
}
